<Page x:Class="VMManagementTool.UI.InitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VMManagementTool.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InitPage">

    <Grid>
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="progressLabel" Foreground="Gray" Content="" HorizontalAlignment="Center" Margin="5,5,5,5"/>
            <ProgressBar IsIndeterminate="True" Height="5" Width="200" Foreground="Gray"/>
        </StackPanel>

    </Grid>
</Page>
