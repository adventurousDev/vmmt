<Window x:Class="VM_Management_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VM_Management_Tool"
        mc:Ignorable="d"
        Title="VM Management Tool" Height="450" Width="800">
    <Grid>
        <Button Content="Check..." HorizontalAlignment="Left" Margin="28,34,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="theConsole" HorizontalAlignment="Left" Height="346" Margin="140,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="615" 
                 Background="#FFFCFCFC" IsReadOnly="True" ScrollViewer.CanContentScroll="True" AutomationProperties.Name="consoleTextbox"/>
        <Button x:Name="abort" Content="Abort..." HorizontalAlignment="Left" Margin="28,308,0,0" VerticalAlignment="Top" Width="75" Background="#FFD02525" Click="Abort_Click"/>
        <Button x:Name="abortD" Content="Abort Downlaod..." HorizontalAlignment="Left" Margin="28,347,0,0" VerticalAlignment="Top" Width="75" Background="#FFD02525" Click="abortD_Click" />
        <Button x:Name="download" Content="Download..." HorizontalAlignment="Left" Margin="28,80,0,0" VerticalAlignment="Top" Width="75" Click="Download_Click" IsEnabled="False" />

    </Grid>
</Window>
